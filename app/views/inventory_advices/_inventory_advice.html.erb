<div class="form-group">
  <%= form.label "Source", class: "col-sm-2 control-label" %>
  <div class="col-xs-4">		
    <%= form.text_field :source, class: "form-control"	%>
  </div>
</div>
<div class="form-group">
  <%= form.label "Reference Number", class: "col-sm-2 control-label" %>
  <div class="col-xs-4">
    <%= form.text_field :object_reference_number, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= form.label "Product", class: "col-sm-2 control-label" %>
  <div class="col-xs-4">
    <%= form.select :product_id, @products.collect {|product| [product.name, product.id]}, {}, {class: "form-control"} %>
  </div>
</div>
<div class="form-group">
  <%= form.label "Location" , class: "col-sm-2 control-label" %>
  <div class="col-xs-4">	
    <%= form.select :location_id, @locations.collect {|location| [location.name, location.id]}, {} , {class: "form-control"} %>
  </div>
</div>
<div class="form-group">
  <%= form.label "Quantity", class: "col-sm-2 control-label" %>
  <div class="col-xs-4">
    <%= form.text_field :adjustment_quantity, class: "form-control" %>
  </div>
</div>
