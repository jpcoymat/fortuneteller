<h1>Inventory Positions</h1>
 <p>Please select a Product and Locaiton to see projections.</p>
  <%= form_for :inventory_position_search, url: lookup_inventory_positions_path do |form| %>
	<%= form.label "Product" %> <%= form.select :product_id, @products.collect {|product| [product.name, product.id]} %>
        <%= form.label "Location" %> <%= form.select :location_id, @locations.collect {|location| [location.name, location.id]} %>
        <%= submit_tag "Lookup Projections" %> 
  <% end %>
  <br \><br \>
  <hr>
  <% if request.post? %>
    <% if @inventory_position.nil? %>
       <p>There are no Inventory Positon records for the product and location chosen.</p>	
    <% else %>
       <p>Projections for Product <%= @inventory_position.product.name %> and Location <%= @inventory_position.location.name %></p>	
       <table>
         <tr><th>Date</th><th>On Hand Quantity</th> <th>On Order Quantity</th><th>In Transit</th> <th>Allocated Quantity</th> <th>Forecasted Quantity</th><th>Available Quantity</th></tr>
	 <% @inventory_position.inventory_projections.each do |inventory_projection| %>
           <tr>	<td><%= inventory_projection.projected_for.to_s %></td>
		<td><%= inventory_projection.on_hand_quantity.to_s %></td>
		<td><%= inventory_projection.on_order_quantity.to_s %></td>
		<td><%= inventory_projection.in_transit_quantity.to_s %></td>
		<td><%= inventory_projection.allocated_quantity.to_s %></td>
		<td><%= inventory_projection.forecasted_quantity.to_s %></td>
		<td><%= inventory_projection.available_quantity.to_s %></td>
	  </tr>  
         <% end %>	 
       </table>
    <% end %>
  <% end %>
  <br \> <br \><br \>
  <%= link_to "Main Menu", main_index_path %>


