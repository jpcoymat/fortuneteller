<h1>Inventory Dashboard</h1>

<script type='text/javascript' src='https://www.google.com/jsapi'></script>
<script type='text/javascript'>
 google.load('visualization', '1', {'packages': ['geochart']});
 google.setOnLoadCallback(drawMarkersMap);

  function drawMarkersMap() {
  var dataTable = google.visualization.DataTable();
  
  dataTable.addColumn('number', 'Latitude');
  dataTable.addColumn('number', 'Longitude');
  dataTable.addColumn('number', 'Exception Count');
  dataTable.addColumn({type: 'string', role: 'tooltip'});
  dataTable.addRows(<%= @data_array.to_s.html_safe %>);

  var options = {
    sizeAxis: { minValue: 0, maxValue: <%= @max_quantity %> },
    region: 'US',
    displayMode: 'markers',
    resolution: 'provinces'};


  var chart = new google.visualization.GeoChart(document.getElementById('chart_div'));
  chart.draw(dataTable, options);
};

</script>


 <div id="chart_div" style="width: 900px; height: 500px;"></div>
