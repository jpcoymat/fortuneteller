<h1>Bucket Inventory View</h1>
 <p>Please select the location group, product information, and inventory bucket you wish to view (data criteria are optional).</p>
  <%= form_for :group_search, url: inventory_bucket_view_path, html: {class: "form-inline"}  do |form| %>
        <p>
	<%= form.label "Inventory Bucket" %> <%= form.select :inventory_bucket, [["On Hand", "on_hand_quantity"],
										["On Order", "on_order_quantity"],
										["In Transit", "in_transit_quantity"],
										["Allocated", "allocated_quantity"],
										["Planned Consumption", "forecasted_quantity"]] %>	
        <%= form.label "Location Group" %> <%= form.select :location_group_id, @location_groups.collect {|loc_group| [loc_group.name, loc_group.id]} %>
        </p>
        <p>
        <%= render partial: "product_autocomplete", locals: {form: form} %>
        <%= form.label "Product Category" %> <%= form.text_field :product_category      %>
        </p>
        <p>
        <%= form.label "Begin Projection Date" %>
        <%= form.text_field :begin_date %>
        <script>
          $( "#group_search_begin_date" ).datepicker({minDate: 0, maxDate: "<%=@organization.days_to_project%>D", dateFormat: "yy-mm-dd"});
        </script>
        <%= form.label "End Projection Date" %>
        <%= form.text_field :end_date  %>
        <script>
          $( "#group_search_end_date" ).datepicker({minDate: 0, maxDate: "<%=@organization.days_to_project%>D", dateFormat: "yy-mm-dd"});
        </script>
        </p>
        <%= submit_tag "Lookup Projections", class: "btn btn-primary" %>
  <% end %>
  <br \><br \>
  <hr>
  <% if request.post? %>
    <% if @locations.count == 0 %>
       <p>No locations found associated to Location Group.</p>
    <% elsif @product_params_missing %>
      <p> Some product data must be specified.</p>
    <% else %>
       <%=  column_chart(@data, library: {
                                        curveType: 'function',
                                        title: "Inventory Projections",
                                        legend:
                                                {position: "bottom"},
                                        series: @series_hash})    %>
         <br \> <br \><br \>
    <% end %>
  <% end %>
  <br \> <br \><br \>
  <%= link_to "Main Menu", main_index_path %>
  <br \> <br \><br \>
  
