<% if @location.errors.any? %>
	<div id="error_explanation">
                <h2>This Location contains <%= @location.errors.count.to_s + pluralize(@location.errors.count, "eror") %>  :</h2>

                <ul>
                        <% @location.errors.each do |key,value| %>
                                <li><%= key.to_s.capitalize + " " + value %></li>
                        <% end %>
                </ul>
                </div>
<% end %>
