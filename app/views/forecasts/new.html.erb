<h1> Create new Forecast</h1>
<h3>Enter new Forecast Details</h3>
<%= render partial: "forecast_errors" %>
<%= form_for @forecast, html: {class: "form-horizontal"} do |form| %>
  <%= form.hidden_field :organization_id, value: @user.organization_id %>
  <%= render partial: "forecast", locals: {form: form} %>
  <%= submit_tag "Create Forecast" %>
<% end %>

<br \><br \>
<%= link_to "Return to Forecasts", forecasts_path %>
